
<div class="card center padding">
  <%# if @mine %>
    <%#<div class="clear-fix">
      <%= link_to '', @gift, method: :delete, data: {confirm: "Are you sure you want to remove it?"}, class: "float-r x-btn" %>
    <%#</div>
  <% end %>
  <% if @accessable || @mine %>
    <h4><%= @gift.title %></h4>

    <h5><%= @gift.description %></h5>

    <% if @mine %>
      <%= link_to 'Edit', edit_gift_path %> |
      <%= link_to 'Remove', @gift, method: :delete, data: {confirm: "Are you sure you want to remove it?"} %>
    <% else %>
      <% if @reserved %>
        <p>Reserved</p>
        <% if current_user.reserves.find_by(gift_id: @gift.id) != nil %>
          <%= button_to 'Unreserve', unreserve_path(@gift.id), method: :delete %>
        <% end %>
      <% else %>
        <%= button_to 'Reserve', reserve_path(@gift) %>
      <% end %>
    <% end %>
    <p><%= @gift.link %></p>
  <% end %>
  <%= link_to 'Back', :back %>
</div>
