
<div class="container">
  <h3>Searching for <%= @term %></h3>
  <p>resaults:</p>
  <% if @result.empty? %>
    <p>No match found</p>
  <% else %>
    <ul>
    <% @result.each do |user| %>
      <li>
        <div class="card clear-fix grid-2">
          <%= link_to user.name, user_path(user), class: 'list-item padding' %>
          <%= button_to 'Add Friend', friend_path(user), method: :get, class: "center-btn" %>
        </div>
      </li>
    <% end %>
    </ul>
  <% end %>
</div>
